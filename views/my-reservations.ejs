<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Rezervasyonlarım - LIFEX</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-profile-page" style="padding-top: 100px;"> <!-- Profil arka planını kullandım -->

    <%- include('partials/navbar') %>

        <div class="container" style="margin-bottom: 150px;">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    <div class="card shadow-lg border-0"
                        style="background-color: rgba(0,0,0,0.8); color: white; backdrop-filter: blur(10px);">
                        <div class="card-header bg-transparent border-secondary py-3">
                            <h3 class="mb-0 fw-bold"><i class="fa-solid fa-calendar-check text-warning me-2"></i> Ders
                                Rezervasyonlarım</h3>
                        </div>
                        <div class="card-body">

                            <% if (reservations.length===0) { %>
                                <div class="text-center py-5">
                                    <i class="fa-regular fa-calendar-xmark fa-3x text-secondary mb-3"></i>
                                    <p class="text-muted">Henüz aktif bir rezervasyonunuz yok.</p>
                                    <a href="/classes" class="btn btn-outline-warning">Derslere Göz At</a>
                                </div>
                                <% } else { %>
                                    <!-- views/my-reservations.ejs İÇİNDEKİ LİSTE KISMI -->

                                    <div class="list-group list-group-flush">
                                        <% reservations.forEach(res=> { %>
                                            <div
                                                class="list-group-item bg-transparent border-secondary text-white d-flex justify-content-between align-items-center py-3">
                                                <div>
                                                    <div class="d-flex align-items-center gap-2 mb-1">
                                                        <h5 class="fw-bold text-warning mb-0">
                                                            <%= res.className %>
                                                        </h5>

                                                        <!-- DURUM ROZETLERİ -->
                                                        <% if (res.status==='pending' ) { %>
                                                            <span class="badge bg-secondary">⏳ Onay Bekliyor</span>
                                                            <% } else if (res.status==='approved' ) { %>
                                                                <span class="badge bg-success">✅ Onaylandı</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-danger">❌ Reddedildi</span>
                                                                    <% } %>
                                                    </div>

                                                    <p class="mb-0"><i class="fa-regular fa-clock me-2"></i>
                                                        <%= res.dayTime %>
                                                    </p>

                                                    <!-- Hoca Notu Varsa Göster -->
                                                    <% if(res.coachNote) { %>
                                                        <small class="text-info d-block mt-1"><i
                                                                class="fa-solid fa-message me-1"></i> Hoca Notu: <%=
                                                                res.coachNote %></small>
                                                        <% } %>
                                                </div>

                                                <!-- İptal Butonu (Sadece Bekleyenler İptal Edilebilir Olsun) -->
                                                <% if (res.status==='pending' ) { %>
                                                    <form action="/cancel-reservation" method="POST"
                                                        onsubmit="return confirm('İptal etmek istediğinize emin misiniz?');">
                                                        <input type="hidden" name="reservationId"
                                                            value="<%= res._id %>">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="fa-solid fa-trash"></i> İptal
                                                        </button>
                                                    </form>
                                                    <% } %>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <% } %>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
            <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>
    <script>
        // Sayfada 'custom-alert' sınıfına sahip bir kutu var mı diye bakar
        const alertBox = document.querySelector('.custom-alert');

        if (alertBox) {
            // Varsa, 4 saniye bekle
            setTimeout(() => {
                // Önce yavaşça görünmez yap (Opaklık 0)
                alertBox.style.transition = "opacity 0.5s ease";
                alertBox.style.opacity = "0";

                // Efekt bitince (0.5 sn sonra) tamamen sil
                setTimeout(() => {
                    alertBox.remove();
                }, 500);

            }, 4000); // 4000 milisaniye = 4 Saniye
        }
    </script>
